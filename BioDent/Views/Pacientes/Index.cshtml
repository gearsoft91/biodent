@model IEnumerable<BioDent.Models.Paciente>

@{
    ViewBag.Title = "Listado de pacientes";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Bienvenido al Sistema Biodent</h3>
            </div>
            <div class="title_right">
                @using (Html.BeginForm())
                {
                    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                        <div class="input-group">
                            @Html.TextBox("nombreBuscar", null, new { @class = "form-control" })
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit">Buscar</button>
                            </span>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Listado de pacientes</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="pull-right">
                                    <a href='@(Url.Action("Create", "Pacientes"))' class="btn btn-round btn-primary btn-sm"><i class="fa fa-plus-circle"></i> Agregar nuevo</a>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>@Html.ActionLink("NombreCompleto", "Index", new { ordenarPor = ViewBag.ordenarPorParm })</th>
                                        
                                        <th>@Html.ActionLink("Seudonimo", "Index", new { ordenarPor = "seudonimo" })</th>
                                        <th>@Html.DisplayNameFor(model => model.LugarNacimiento)</th>
                                        <th>@Html.DisplayNameFor(model => model.FechaNacimiento)</th>
                                        <th>@Html.DisplayNameFor(model => model.Escolaridad)</th>
                                        <th>@Html.DisplayNameFor(model => model.Tutor)</th>
                                        <th>@Html.DisplayNameFor(model => model.EstadoCivil)</th>
                                        <th>@Html.DisplayNameFor(model => model.Domicilio)</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NombreCompleto)
                                            </td>
                                           
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Seudominio)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LugarNacimiento)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaNacimiento)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Escolaridad)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Tutor)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EstadoCivil)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Domicilio)
                                            </td>
                                            <td>
                                                <a href='@(Url.Action("Edit", "Pacientes", new { id = item.Identificador }))' class="btn btn-sm btn-default" data-placement="top" data-toggle="tooltip" data-original-title="Editar"><i class="fa fa-share"></i></a>
                                                <a href='@(Url.Action("Details", "Pacientes", new { id = item.Identificador }))' class="btn btn-sm btn-default" data-placement="top" data-toggle="tooltip" data-original-title="Detalles"><i class="fa fa-print"></i></a>
                                                <a href='@(Url.Action("Delete", "Pacientes", new { id = item.Identificador }))' class="btn btn-sm btn-default" data-placement="top" data-toggle="tooltip" data-original-title="Eliminar"><i class="fa fa-trash-o"></i></a>
                                           </td>
                                        </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




