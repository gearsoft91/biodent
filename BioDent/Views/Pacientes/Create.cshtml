                                {
                                    @Html.AntiForgeryToken()
                                    <h4>Paciente</h4>
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "help-inline" })
                                    <div class="control-group">
                                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })
                                        <div class="controls">
                                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "grd-white" } })
                                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "help-inline" })
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        @Html.LabelFor(model => model.ApellidoPaterno, htmlAttributes: new { @class = "control-label" })
                                        <div class="controls">
                                            @Html.EditorFor(model => model.ApellidoPaterno, new { htmlAttributes = new { @class = "grd-white" } })
                                            @Html.ValidationMessageFor(model => model.ApellidoPaterno, "", new { @class = "help-inline" })
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        @Html.LabelFor(model => model.ApellidoMaterno, htmlAttributes: new { @class = "control-label" })
