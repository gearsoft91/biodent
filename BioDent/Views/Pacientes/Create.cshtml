                                        <div class="controls">
                                            @Html.EditorFor(model => model.Seudominio, new { htmlAttributes = new { @class = "grd-white" } })
                                            @Html.ValidationMessageFor(model => model.Seudominio, "", new { @class = "help-inline" })
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        @Html.LabelFor(model => model.LugarNacimiento, htmlAttributes: new { @class = "control-label" })
                                        <div class="controls">
                                            @Html.EditorFor(model => model.LugarNacimiento, new { htmlAttributes = new { @class = "grd-white" } })
                                            @Html.ValidationMessageFor(model => model.LugarNacimiento, "", new { @class = "help-inline" })
                                        </div>
                                    </div>

                                    <div class="control-group">
