@model BioDent.Models.Paciente

@{
    ViewBag.Title = "Create";
}

<!-- content-header -->

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h2><i class="icofont-home"></i><small> Bienvenido al sistema Dentist</small></h2>
            </div><!-- /content-header -->
            <!-- content-body -->
            <div class="content-body">
                <!-- calendar -->
                <div class="row-fluid">
                    <div class="span9">
                        <div id="controls" class="row-fluid">
                            <div class="span12">
